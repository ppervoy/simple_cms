	<h2>Update Page</h2>

	<%= form_for(:page, :url => {:action => "update", :subject_id => @subject.id, :id=>@page.id}) do |f| %>
	<%= render(:partial => "form", :locals => {:f => f}) %>
	<div class="form-buttons">
		<%= submit_tag("Update") %>
	</div>

	<% end %>
</div>