<% @page_title = "Subjects" %>

<%= link_to("<<", {:action=>"index"}, :class=>"back-link") %>
<div class="subject edit">
	<h2>Update Subject</h2>

	<%= form_for(:subject, :url=>{:action=>"update", :id=>@subject.id}) do |f|%>
	<%= render(:partial => "form", :locals => {:f => f}) %>
	<div class="form-buttons">
		<%= submit_tag("Update") %>
	</div>
	<% end %>
</div>
