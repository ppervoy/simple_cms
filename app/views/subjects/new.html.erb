<%= link_to("<<", {:action=>"index"}, :class=>"back-link") %>
<div class="subject new">
	<h2>Create Subject</h2>

	<%= form_for(:subject, :url=>{:action=>"create"}) do |f|%>
	<table summary="Subject form fields">
		<tr>
			<th>Name</th>
			<th><%= f.text_field(:name) %></th>
		</tr>
		<tr>
			<th>Position</th>
			<th><%= f.text_field(:position) %></th>
		</tr>
		<tr>
			<th>Visible?</th>
			<th><%= f.text_field(:visible) %></th>
		</tr>
	</table>
	<div class="form-buttons">
		<%= submit_tag("Create") %>
	</div>
	<% end %>
</div>